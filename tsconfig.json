{
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "moduleResolution": "node",
    "lib": ["es2017", "dom"],
    "allowJs": true,
    "checkJs": true,
    "noEmit": false,
    "declaration": true,
    "strict": false,
    "noImplicitThis": true,
    "alwaysStrict": true,
    "emitDeclarationOnly": true,
    "types": ["node", "prismjs"],
    "esModuleInterop": true
  },
  "exclude": [
    "./lib/**/*.d.ts",
    "./lib/**/index.d.ts",
    "./test/"
  ]
}