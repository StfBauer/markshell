{
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "moduleResolution": "node",
    "lib": ["es2017", "dom"],
    "allowJs": true,
    "checkJs": true,
    "noEmit": false,
    "declaration": true,
    "strict": true,
    "noImplicitThis": true,
    "alwaysStrict": true,
    "types": ["node", "prismjs"],
    "esModuleInterop": true
  },
  "include": ["test", "lib"]
}
